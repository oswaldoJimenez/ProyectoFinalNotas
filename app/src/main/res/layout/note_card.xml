<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    card_view:cardBackgroundColor="@color/divider"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/foto"
            android:layout_toRightOf="@+id/foto"
            android:maxLines="1"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_fechaIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_titulo"
            android:layout_alignStart="@+id/txt_titulo"
            android:layout_alignLeft="@+id/txt_titulo"
            android:text="@string/card_fechaCreate"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/txt_descrip"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_checa"
            android:layout_alignStart="@+id/txt_checa"
            android:layout_alignLeft="@+id/txt_checa"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:maxLines="3"
            android:text="DescrcipciÃ³n"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/txt_fechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fechaIni"
            android:layout_alignStart="@+id/txt_fechaIni"
            android:layout_alignLeft="@+id/txt_fechaIni"
            android:text="@string/card_fechaLimit"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/txt_checa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fechaFin"
            android:layout_alignStart="@+id/txt_fechaFin"
            android:layout_alignLeft="@+id/txt_fechaFin"
            android:layout_marginTop="8dp"
            android:text="CUMPLIDA: S/N"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </RelativeLayout>

</android.support.v7.widget.CardView>